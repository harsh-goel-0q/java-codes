package learningjava;
import java.util.*;
public class blahhh {

	public static void main(String args[]) {
		Scanner scanner = new Scanner(System.in);
		Random random = new Random();
        System.out.println("Type 1 to motivate yourself\nType 2 for a coinflip\nType 3 to play a game with the computer");
        int x=scanner.nextInt();
        switch(x) {
        case 1: for(int i=1;i<=10;i++) {
        	if(i%2==0)
        		System.out.println("You can do it!!");
        	else
        		System.out.println("You are the best!!");
        }
        	System.out.println("NOW START THE HUSTLE!!");
        	break;
        	case 2: int y= random.nextInt(1);
        	        if(y==1)
        	        	System.out.println("Heads");
        	        else
        	        	System.out.println("Tails");
        	        break;
        	case 3: System.out.println("Game rules\nIf the number you entered and the number computer rolls are both an even number or a odd number then you lose\nIf you enter an even number and the computer rolls an odd number or vice versa, then you win\nIf your entered number and the number computer rolls match up then you get a jackpot\nEnter any number from 1 to 10");
        	        int z= scanner.nextInt();
        	        int q=random.nextInt(10)+1;
        	        System.out.println("The number computer rolled is "+q);        	        if((q%2==0&&z%2==0)||(q%2!=0&&z%2!=0))
        	        	System.out.println("You lost");
        	        else
        	        	System.out.println("You won");
        	        if(q==z)
        	        	System.out.print(" a JACKPOT!!");
        	        break;
        	        default: System.out.println("Invalid input");
        }
        scanner.close();
        }
		}
